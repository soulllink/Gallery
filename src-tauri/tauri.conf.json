{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "gallery-app",
  "version": "0.1.0",
  "identifier": "com.ibue.galleryapp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Gallery",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc:; img-src 'self' blob: data: asset: http://asset.localhost https://asset.localhost; media-src 'self' blob: data: asset: http://asset.localhost https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
